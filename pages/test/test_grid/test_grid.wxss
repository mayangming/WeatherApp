/* pages/test_grid/test_grid.wxss */
span {
  font-size: 2em;
}

#container{
  background-color: orangered;
  display: grid;
  margin-top: 10rpx;
  grid-template-columns:repeat(auto-fill,100px);/** 平铺宽度为100px的单元格 */
  grid-template-rows: 100px;/** 设置高度为100px */
  grid-auto-rows: 100px;/** 当容易高度不够时，多余的组件高度将怎么分配，默认的高度由单元格内容决定 */
  justify-content: center;/** 水平居中  */
  grid-gap: 10rpx;/** 水平和垂直间距为10rpx*/
  padding: 10rpx;
}
#container_flex{
  background-color: orchid;
  /* height: 1000rpx; */
  display: flex;
  margin-top: 10rpx;
  justify-content: center;  /**水平居中 */
  flex-direction: row;
  flex-flow: wrap;/** 一行放不下时候换行，默认不换行 */
}
.item {
  font-size: 1em;
  border: 1px solid #e5e4e9;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item_flex{
  display: inline-flex;
  width: 100px;
  height: 100px;
  border: 1px solid #e5e4e9;
  font-size: 4em;
  text-align: center;
}
.item-1 {
  background-color: #ef342a;
}

.item-2 {
  background-color: #f68f26;
}

.item-3 {
  background-color: #4ba946;
}

.item-4 {
  background-color: #0376c2;
}

.item-5 {
  background-color: #c077af;
}

.item-6 {
  background-color: #f8d29d;
}

.item-7 {
  background-color: #b5a87f;
}

.item-8 {
  background-color: #d0e4a9;
}

.item-9 {
  background-color: #4dc7ec;
}
.grid1{
  display: grid;
  grid-template-columns: 100rpx auto 100rpx;
  justify-items: center;
  /* visibility: visible;* 隐藏但是占据位置，所以可以测量出组件的坐标和宽高 */
}
.block{
  background-color: orchid;
  width: 100rpx;
  height: 100rpx;
}